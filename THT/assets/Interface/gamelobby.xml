  <screen id="gamelobby" controller="client.GameLobbyScreen" visibleToMouse="true">
      <layer id="background" childLayout="center">
        <image id="" filename="Interface/room.jpg"/>
      </layer>
    <layer id="foreground" childLayout="vertical">
      <panel id="panel_top" height="10%" width="75%" align="center" childLayout="center">
        <text text="Room Lobby" font="Interface/Fonts/Default.fnt" width="100%" height="10%" />
      </panel>
      <panel id="panel_mid" childLayout="center" width="75%" align="center" height="20%">
        <panel id="panel_mid_left" childLayout="left" name="returnButton">
            <control name="button" id="returnToLobby" visiableToMouse="true" label="returnToLobby">
                <interact onClick="returnToLobby()"/>
           </control>
        </panel>
        <panel id="panel_mid_right" childLayout="right" name="quitButton">
            <control name="button" id="Quit" visiableToMouse="true" label="Quit">
                <interact onClick="quitGame()"/>
            </control>                
        </panel>
      </panel>
      <!-- Panel for chat and players -->
      <panel id="panel_bottom" height="70%" width="75%" align="center" childLayout="vertical">
       
          <panel id="pannel_bottom_windows" width="100%" height="80%" childLayout="horizontal">
        <!-- Two panels, one for chat one for the players -->
            <panel id="panel_chat" width="70%" height="100%">
                <control name="listBox" id="myListBox" horizontal="optional" selection="Disabled" width="75%" vertical="on" displayItems="10"/>
            </panel>
            <panel id="panel_players" width="30%" height="100%">
                <control name="listBoxPlayers" id="myListBoxPlayers" horizontal="optional" selection="Disabled" width="75%" vertical="on" displayItems="10"/>
            </panel>  
          </panel>
        
          <panel id="panel_bottom_input" width="100" height="20%" childLayout="horizontal">
        <!-- Panels for input and send to server -->
            <panel id="panel_input">
                <control name="textfield" id="textfieldInput" textHAlign="center" textVAlign="center" width="25%" text="" maxLength="20"/>
            </panel>
            <panel id="panel_button">
                <control name="button" id="SendMessage" visiableToMouse="true" label="Send Message">
                    <interact onClick="sendToServer()"/>
                </control>
            </panel>               
          </panel>
            
