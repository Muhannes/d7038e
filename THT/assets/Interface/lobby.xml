<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="lobby" controller="client.LobbyScreen" visibleToMouse="true">
        <layer id="background" childLayout="center">
            <image id="" filename="Interface/scaryMenu.jpg"/>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" childLayout="center" width="75%" align="center" height="25%"/>
            <panel id="panel_mid_top" childLayout="center" width="75%" align="center" height="45%">
                <control name="listBox" id="myListBox" horizontal="optional" selection="Single" width="75%" vertical="on" displayItems="10"/>
            </panel>
            <panel id="panel_mid_bottom" childLayout="center" width="35%" align="center" height="5%">
                <panel id="panel_mid_bottom_left" childLayout="center" align="left">
                    <control name="textfield" id="textfieldGamename" textHAlign="center" textVAlign="center" width="25%" text="Game name" maxLength="20"/>
                </panel>
                <panel id="panel_mid_bottom_right" childLayout="center" align="right">
                    <control name="button" id="NewGame" visiableToMouse="true" label="NewGame">
                        <interact onClick="newGame()"/>
                    </control> 
                </panel>
            </panel>
            <panel id="panel_bottom" childLayout="horizontal" width="75%" align="center" height="25%">
                <panel id="panel_bottom_left" childLayout="horizontal" width="75%" align="center" height="25%"/>
                <panel id="panel_bottom_right" childLayout="horizontal" width="25%" align="right" height="25%">
                    <control name="button" id="Quit" visiableToMouse="true" label="Quit">
                        <interact onClick="quitGame()"/>
                    </control>    
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
